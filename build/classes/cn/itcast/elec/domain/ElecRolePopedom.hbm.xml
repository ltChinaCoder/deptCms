<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping >

    <class name="cn.itcast.elec.domain.ElecRolePopedom" table="Elec_Role_Popedom">
        <id name="roleID"  type="string">
        <column name="roleID" not-null="true" ></column>
            <generator class="assigned">
         <!-- uuid 对应32位随机字符串 不会重复 -->
            </generator>
            
        </id>         
        <property name="popedomCode" >
        <column name="popedomCode" sql-type="varchar(50)"> </column>
        </property>
         <property name="remark" >
        <column name="remark" sql-type="varchar(500)"> </column>
        </property>
     
        
        
    </class>

</hibernate-mapping>
